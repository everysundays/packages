{
  "name": "rack-rail-tailwind-plugin",
  "version": "1.0.0",
  "description": "A Tailwind CSS plugin for a custom responsive grid system with rack (wrapped) and rail (scrollable) containers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
