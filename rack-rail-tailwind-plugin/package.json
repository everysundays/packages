    "plugin",
    "grid",
    "responsive",
    "layout",
    "rack",
    "rail"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.11.26",
    "rollup": "^4.13.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.2"
  }
